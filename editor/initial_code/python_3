def stick(number):
    return [number // 2, number - number // 2]

#These "asserts" using only for self-checking and not necessary for auto-testing
if __name__ == '__main__':
    assert stick(64) == [15, 21, 28], "1st example"
    assert stick(371) == [36, 45, 55, 66, 78, 91], "1st example"
    assert stick(225) == [105, 120], "1st example"
    assert stick(882) == [], "1st example"
